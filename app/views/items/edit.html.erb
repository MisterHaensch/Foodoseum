<div class="new-item">
    <h1>New item</h1>
    
        <%= form_for(@item) do |f| %>
            <div class="form-group">
                <%= f.label :image %>
                <%= f.file_field :image %>
            </div>
            <div class="form-group">
                <%= f.select :category_id, @categories,{} ,{:class => "form-control"} %>
            </div>
            <div class="form-group">    
                <%= f.label :title, "Title:" %>            
                <%= f.text_field :title, class: "form-control" %>
            </div>
            <div class="form-group">
                <%= f.label :rating, "Rating (0-5):" %>            
                <%= f.number_field :rating, class: "form-control" %>
            </div>
            <div class="form-group">
                <%= f.label :description, "Ingredients:" %>
                <%= f.text_area :description, class: "form-control" %>
            </div>
                <%= f.submit "Submit", class: "btn btn-primary new-button-custom" %>
        <% end %>
</div>
 
    
   
    
   